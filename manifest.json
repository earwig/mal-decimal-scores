{
    "manifest_version": 2,
    "name": "Decimal Scores for MyAnimeList",
    "version": "0.1",

    "description": "Gives you finer control over MyAnimeList.net scores.",
    "short_name": "MAL Decimal",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts": [{
        "matches": ["http://myanimelist.net/*"],
        "js": ["jquery.min.js", "main.js"],
        "all_frames": true
    }],
    "permissions": ["storage"]
}
